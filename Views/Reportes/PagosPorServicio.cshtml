    </environment>
    <script>       
        $(document).ready(function(){
            var now = moment();
            $('.datepicker')
                .val(now.format("DD-MM-YYYY"))
                .datepicker({
                    autoclose: true,
                    format: 'dd-mm-yyyy',
                    language: 'es'
            });

            $('#btnSearch').click(function () {           
                getList();
            });
           
        });


        var getList = ()=>{
            var data = findEntity('CajaParameter');
            $('#btnSearch').searching();
             $.get(pathBase + 'Reportes/RecibosCaja_Detelle2_GetList',data,result => {
                 console.log(result);
                $("#gridContainer").dxDataGrid({
                    dataSource: result,
                    allowColumnReordering: true,
                    allowColumnResizing: true,
                    columnChooser: {
                        enabled: true
                    },
                    groupPanel: {
                        visible: true
                    },
                    filterRow: {
                        visible: true
                    },
                    headerFilter: {
                        visible: true,
                        allowSearch: true
                    },
                    
                    showRowLines: true,
                    showBorders: true,
                    rowAlternationEnabled: true,
                    keyExpr: "Id",
                    sorting: {
                        mode: "multiple"
                    },   
                    "export": {
                        enabled: true,
                        fileName: "RecibosCaja",
                        allowExportSelectedData: true
                    },
                    pager: {
                        allowedPageSizes: [10, 20, 30, 50],
                        showInfo: true,
                        showNavigationButtons: true,
                        showPageSizeSelector: true,
                        visible: true
                    },
                    showScrollbar: 'Always',
                    columnAutoWidth: true,
                    paging: {
                        pageSize: 10
                    },
                    columns: [{
                            dataField: "fechaProceso",
                            dataType: "date",
                            width: 120,
                            format:'dd/MM/yyyy'
                        },                        
                        {
                            dataField: "numRecibo",                          
                        },  
                        "caja",                      
                        {
                            dataField: "beneficiario",                            
                           // width: 280                  
                        },                                  
                        "moneda",
                        "minutaReferencia",  
                        {
                            dataField: "minutaFecha",
                            dataType: "date",
                            format:'dd/MM/yyyy'
                        },                       
                        "montoCordoba",   
                        "montoDolar",    
                        "servicioNombre",      
                        "servicioPrecio",      
                        "servicioCantidad",      
                        "servicioTotal"       
                    ]                           
                });      
                $('#btnSearch').reset();   
            });
        }
    </script>
    }