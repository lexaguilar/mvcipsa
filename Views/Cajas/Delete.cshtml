@model mvcIpsa.DbModel.Caja
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper">
    <section class="panel animated slideInUp">
        <header class="panel-heading">
            Editar caja
        </header>
        <div class="row">
            <div class="col-md-4  col-md-offset-4">

                <h3>Segruro que quiere eliminar esta caja?</h3>
                <div>
                    <h4>Caja</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.NoCaja)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.NoCaja)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
                      
                    </form>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Index">Regresar a la lista</a>
        </div>
    </section>
</div>