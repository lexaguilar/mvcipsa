@model mvcIpsa.DbModel.Caja
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper">
    <section class="panel animated slideInLeft">
        <header class="panel-heading">
            Crear nueva caja
        </header>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="NoCaja" class="control-label"></label>
                            <input type="number" asp-for="NoCaja" class="form-control" />
                            <span asp-validation-for="NoCaja" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                        </div>
                    </form>
                </div>
            </div>           
        </div>
        <div class="panel-footer">
            <a asp-action="Index"><span class="fa fa-angle-left"></span> Regresar</a>
            <a asp-action="create" class="pull-right"><span class="fa fa-plus"></span> Nuevo</a>
        </div> 
    </section>
</div>