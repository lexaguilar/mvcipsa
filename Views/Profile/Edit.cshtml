@using mvcIpsa.DbModel
@model Profile
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="wrapper">
    <section class="panel animated slideInUp">
        <header class="panel-heading">
            Editar usuario
        </header>
        <form method="post" asp-controller="Profile" asp-action="Edit" class="animated bounceInLeft">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4 col-lg-offset-4">
                        <input type="hidden" asp-for="Username" />
                        <label asp-for="Username"></label>
                        <h4> @Model.Username</h4>
                        <div class="form-group">
                            <label asp-for="Nombre"></label>
                            <div class="iconic-input">
                                <i class="fa fa-user"></i>
                                <input asp-for="Nombre" class="form-control ipsa-requeried" placeholder="Nombre" data-validation="La contraseña es requerida" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellido"></label>
                            <div class="iconic-input">
                                <i class="fa fa-user"></i>
                                <input asp-for="Apellido" class="form-control ipsa-requeried" placeholder="Apellidos" data-validation="La contraseña es requerida" />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Correo"></label>
                            <div class="iconic-input">
                                <i class="fa fa-envelope-o"></i>
                                <input asp-for="Correo" class="form-control ipsa-requeried" placeholder="Correo" data-validation="La contraseña es requerida" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Caja.Description"></label>
                            <div class="iconic-input">
                                <select asp-for="CajaId" class="form-control">
                                    @foreach (var caja in ViewBag.Cajas)
                {
                    <option value="@caja.Id">@caja.Description</option>
}
                                </select>

                                <span asp-validation-for="CajaId" class="text-danger"></span>
                            </div>
                        </div>
                        <button class="btn btn-success btn-block" type="submit"><i class="fa fa-check"></i> Guardar </button>
                    </div>
                </div>
            </div>          
            <button asp-action="index" class="btn btn-default"><span class="fa fa-arrow-left"></span> Regresar a la lista </button>
        </form>
    </section>
</div>
